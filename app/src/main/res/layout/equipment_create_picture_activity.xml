<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/create_equipment_picture_header_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/c_00baf3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_43"
        android:background="@color/c_00baf3">

        <RelativeLayout
            android:id="@+id/create_equipment_picture_header_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dimen_09"
                android:layout_height="@dimen/dimen_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/icon_back_white" />
        </RelativeLayout>


        <TextView
            android:id="@+id/create_equipment_picture_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增材设进场记录"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_17" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_20"
        android:background="@color/c_f9f9f9">
        <View
            android:layout_width="@dimen/dimen_02"
            android:layout_height="@dimen/dimen_14"
            android:layout_gravity="center_vertical"
            android:background="@color/c_00b5f2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/c_00b5f2"
            android:textSize="@dimen/dimen_14"
            android:text="您可记录现场照片"
            android:layout_marginLeft="@dimen/dimen_05"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/create_equipment_picture_photo_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_19"
        android:paddingBottom="@dimen/dimen_22"
        android:paddingLeft="@dimen/dimen_20">

        <ImageView
            android:id="@+id/create_equipment_picture_photo_0"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginRight="@dimen/dimen_10"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/create_equipment_picture_photo_1"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginRight="@dimen/dimen_10"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/create_equipment_picture_photo_2"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginRight="@dimen/dimen_10"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/create_equipment_picture_photo_3"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:background="@drawable/icon_add_picture" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10"
        android:background="@color/c_f9f9f9"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验收合格"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16" />

        <ImageView
            android:id="@+id/create_equipment_picture_flag"
            android:layout_width="@dimen/dimen_51"
            android:layout_height="@dimen/dimen_31"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_flag_open" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_f9f9f9"
        android:orientation="vertical">

        <Button
            android:id="@+id/create_equipment_picture_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_40"
            android:background="@drawable/corner_radius_33_blue_bg"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16" />
    </LinearLayout>

</LinearLayout>
