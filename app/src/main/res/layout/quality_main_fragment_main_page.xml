<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_43"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/quality_main_page_header_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/icon_back_blue" />
        </RelativeLayout>


        <TextView
            android:id="@+id/quality_main_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dimen_17"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/quality_main_page_search"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_18"
            android:background="@drawable/icon_search_blue"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_40"
            android:background="@drawable/icon_main_page_top_bg"/>
        <ImageView
            android:id="@+id/quality_main_page_icon_quality"
            android:layout_width="@dimen/dimen_27"
            android:layout_height="@dimen/dimen_74"
            android:background="@drawable/icon_main_page_top_equipment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_120"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/quality_main_page_icon_equipment"
            android:layout_width="@dimen/dimen_121"
            android:layout_height="@dimen/dimen_87"
            android:background="@drawable/icon_main_page_top_quality"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_110"
            android:visibility="gone"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/quality_main_page_catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white">

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/quality_main_page_catalog_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_f5f8f9"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15">

    </android.support.v4.view.ViewPager>
</LinearLayout>
