<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/choose_module_list_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_00baf3"
        android:orientation="vertical"></LinearLayout>
    <!--导航栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:background="@color/c_00baf3">

        <ImageView
            android:id="@+id/choose_module_list_nav_back"
            android:layout_width="@dimen/dimen_09"
            android:layout_height="@dimen/dimen_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@drawable/icon_back_white" />

        <TextView
            android:id="@+id/choose_module_list_nav_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="质检项目"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_17" />

        <ImageView
            android:id="@+id/choose_module_list_nav_search"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_search_white" />
    </RelativeLayout>
    <include layout="@layout/view_pullrefresh_view"
        android:id="@+id/choose_module_list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

</LinearLayout>
