<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dimen_270"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/corner_radius_5_white_bg_"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_trends_delete_dialog_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_24"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_24"
            android:textSize="@dimen/dimen_17" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.3"
            android:background="#40000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_trends_delete_dialog_no"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/dimen_17" />

            <ImageView
                android:layout_width="@dimen/dimen_0.3"
                android:layout_height="match_parent"
                android:background="#40000000" />

            <TextView
                android:id="@+id/item_trends_delete_dialog_yes"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textSize="@dimen/dimen_17" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>