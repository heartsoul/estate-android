<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_20"
    android:paddingTop="@dimen/dimen_20"
    android:paddingRight="@dimen/dimen_20"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/module_standard_cata_flag"
            android:layout_width="@dimen/dimen_14"
            android:layout_height="@dimen/dimen_14"
            android:background="@drawable/icon_module_standard_open"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/module_standard_cata_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dimen_06"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/module_standard_cata_content_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/module_standard_cata_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_7a7a7a"
            android:layout_marginTop="@dimen/dimen_14"
            android:layout_marginLeft="@dimen/dimen_20"
            />
    </LinearLayout>
</LinearLayout>