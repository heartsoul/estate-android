<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_52"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_34"
            android:layout_height="@dimen/dimen_34"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_27"
            android:background="@drawable/icon_model_list_head"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/quality_model_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_18"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="首开"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16"
            android:gravity="center_vertical"
            />



    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dimen_05"
        android:layout_height="@dimen/dimen_11"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_21"
        android:background="@drawable/icon_arrow_right_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:layout_alignParentBottom="true"
        android:background="@color/c_8ccccccc" />
</RelativeLayout>