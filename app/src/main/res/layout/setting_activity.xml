<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_252"
                android:orientation="vertical"
                android:background="@drawable/icon_choose_category_item_bg">
                <ImageView
                    android:id="@+id/setting_back"
                    android:layout_width="@dimen/dimen_09"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/icon_back_white"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_31"
                    />

                <ImageView
                    android:id="@+id/setting_head_icon"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_35"
                    android:background="@drawable/icon_default_boy" />

                <TextView
                    android:id="@+id/setting_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_19"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_24"
                    android:text="您的专属BIM协同管理"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>
            <!--修改密码-->
            <RelativeLayout
                android:id="@+id/setting_change_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50">
                <ImageView
                    android:id="@+id/setting_change_password_icon"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/icon_setting_change_password"
                    />
                <ImageView
                    android:layout_width="@dimen/dimen_05"
                    android:layout_height="@dimen/dimen_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:background="@drawable/icon_arrow_right_gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/setting_change_password_icon"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="@color/black"
                    android:text="修改密码"
                    android:layout_marginLeft="@dimen/dimen_20"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@color/c_f7f7f7"/>
            <!--版本信息-->
            <RelativeLayout
                android:id="@+id/setting_version_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50">
                <ImageView
                    android:id="@+id/setting_version_info_icon"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/icon_setting_version"
                    />
                <ImageView
                    android:id="@+id/setting_version_info_arrow"
                    android:layout_width="@dimen/dimen_05"
                    android:layout_height="@dimen/dimen_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:background="@drawable/icon_arrow_right_gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/setting_version_info_icon"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="@color/black"
                    android:text="版本信息"
                    android:layout_marginLeft="@dimen/dimen_20"
                    />
                <TextView
                    android:id="@+id/setting_version_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/setting_version_info_arrow"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="@color/c_999992"
                    android:text="版本号V1.0.0"
                    android:layout_marginRight="@dimen/dimen_11"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@color/c_f7f7f7"/>
            <!--意见反馈-->
            <RelativeLayout
                android:id="@+id/setting_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50">
                <ImageView
                    android:id="@+id/setting_feedback_icon"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/icon_setting_feedback"
                    />
                <ImageView
                    android:layout_width="@dimen/dimen_05"
                    android:layout_height="@dimen/dimen_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:background="@drawable/icon_arrow_right_gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/setting_feedback_icon"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="@color/black"
                    android:text="意见反馈"
                    android:layout_marginLeft="@dimen/dimen_20"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@color/c_f7f7f7"/>
            <!--联系我们-->
            <RelativeLayout
                android:id="@+id/setting_contact_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50">
                <ImageView
                    android:id="@+id/setting_contact_us_icon"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/icon_setting_contact_us"
                    />
                <ImageView
                    android:id="@+id/setting_contact_us_arrow"
                    android:layout_width="@dimen/dimen_05"
                    android:layout_height="@dimen/dimen_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:background="@drawable/icon_arrow_right_gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/setting_contact_us_icon"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="@color/black"
                    android:text="联系我们"
                    android:layout_marginLeft="@dimen/dimen_20"
                    />
                <TextView
                    android:id="@+id/setting_contact_us_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/setting_contact_us_arrow"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="@color/c_00baf3"
                    android:layout_marginRight="@dimen/dimen_11"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@color/c_f7f7f7"/>
            <!--关于我们-->
            <RelativeLayout
                android:id="@+id/setting_about_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50">
                <ImageView
                    android:id="@+id/setting_about_us_icon"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/icon_setting_about_us"
                    />
                <ImageView
                    android:layout_width="@dimen/dimen_05"
                    android:layout_height="@dimen/dimen_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:background="@drawable/icon_arrow_right_gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/setting_about_us_icon"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="@color/black"
                    android:text="关于我们"
                    android:layout_marginLeft="@dimen/dimen_20"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/c_f7f7f7"/>
            <Button
                android:id="@+id/setting_signout_btn"
                android:layout_width="@dimen/dimen_297"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_30"
                android:background="@drawable/corner_radius_33_blue_bg"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>