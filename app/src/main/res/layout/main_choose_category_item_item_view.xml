<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_98"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20" />

    <LinearLayout
        android:id="@+id/choose_category_item_item_parent"
        android:layout_width="@dimen/dimen_98"
        android:layout_height="@dimen/dimen_98"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/choose_category_item_item_icon"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@drawable/icon_choose_project_item" />

        <TextView
            android:id="@+id/choose_category_item_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_12" />

    </LinearLayout>
</LinearLayout>