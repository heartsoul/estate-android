<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/relevant_model_statusview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/c_80000000" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_43"
        android:background="@color/c_80000000">

        <RelativeLayout
            android:id="@+id/relevant_model_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_43">

            <ImageView
                android:layout_width="@dimen/dimen_09"
                android:layout_height="@dimen/dimen_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/icon_back_white" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/relevant_model_change_model"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:background="@drawable/icon_change_model"
            android:layout_toRightOf="@id/relevant_model_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/relevant_model_finish"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10">

            <View
                android:layout_width="@dimen/dimen_01"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_01"
                android:layout_centerVertical="true"
                android:background="@color/white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:maxLength="15"
            android:text="点击选择"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_17" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/relevant_model_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
</LinearLayout>

