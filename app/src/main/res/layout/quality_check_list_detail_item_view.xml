<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/c_a3cccccc"
        android:layout_marginLeft="@dimen/dimen_11"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/dimen_20"
        android:paddingLeft="@dimen/dimen_20"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_74">
            <ImageView
                android:id="@+id/quality_check_list_detail_item_head"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/quality_check_list_detail_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查"
                android:paddingTop="@dimen/dimen_04"
                android:paddingBottom="@dimen/dimen_04"
                android:paddingRight="@dimen/dimen_10"
                android:paddingLeft="@dimen/dimen_10"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/quality_check_list_detail_item_head"
                android:layout_toLeftOf="@id/quality_check_list_detail_item_status"
                android:layout_marginLeft="@dimen/dimen_12"
                >
                <TextView
                    android:id="@+id/quality_check_list_detail_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘明明-监理"
                    android:textSize="@dimen/dimen_15"
                    android:textColor="@color/c_313131"
                    />
                <TextView
                    android:id="@+id/quality_check_list_detail_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-02-25"
                    android:textSize="@dimen/dimen_12"
                    android:textColor="@color/c_919191"
                    android:layout_marginTop="@dimen/dimen_03"
                    />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/quality_check_list_detail_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_2c2c2c"
            android:textSize="@dimen/dimen_16"
            android:text="三楼需要调整"
            />
        <TextView
            android:id="@+id/quality_check_list_detail_item_time_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_2c2c2c"
            android:textSize="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_03"
            android:text="整改期：2017-02-15"
            />
        <ImageView
            android:id="@+id/quality_check_list_detail_item_image_one"
            android:layout_width="@dimen/dimen_174"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dimen_10"
            />
        <LinearLayout
            android:id="@+id/quality_check_list_detail_item_image_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_10"
            >
            <ImageView
                android:id="@+id/quality_check_list_detail_item_image_0"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_100"
                android:scaleType="centerCrop"/>
            <View
                android:layout_width="@dimen/dimen_08"
                android:layout_height="@dimen/dimen_08"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/quality_check_list_detail_item_image_1"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_100"
                android:scaleType="centerCrop"/>
            <View
                android:layout_width="@dimen/dimen_08"
                android:layout_height="@dimen/dimen_08"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/quality_check_list_detail_item_image_2"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_100"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20"
            android:background="@color/white"/>
    </LinearLayout>
</LinearLayout>
