<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:id="@+id/sms_code_statusview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/white" />


        <RelativeLayout
            android:id="@+id/sms_code_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_43">

            <ImageView
                android:layout_width="@dimen/dimen_09"
                android:layout_height="@dimen/dimen_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_26"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/icon_back_black" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信验证"
            android:textColor="@color/c_222222"
            android:textSize="@dimen/dimen_36"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_25"
            />
        <TextView
            android:id="@+id/sms_code_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入185****2398收到的短信验证码"
            android:textColor="@color/c_ff5151"
            android:textSize="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_80"
            />

        <TextView
            android:id="@+id/sms_code_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/c_999992"
            android:textSize="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_37"
            android:layout_marginLeft="@dimen/dimen_40"
            android:visibility="invisible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_40"
            android:paddingRight="@dimen/dimen_40"
            >
            <EditText
                android:id="@+id/sms_code_text"
                android:layout_width="@dimen/dimen_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_18"
                android:textColor="@color/black"
                android:maxLength="6"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:background="@color/white"
                android:hint="验证码"
                android:textColorHint="@color/c_999992"
                android:layout_gravity="center_vertical"
                />
            <RelativeLayout
                android:id="@+id/sms_code_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15"
                android:visibility="gone">
                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_18"
                    android:background="@drawable/icon_login_password_delete"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/sms_code_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_00baf3"
                android:textSize="@dimen/dimen_14"
                android:layout_gravity="center_vertical"
                android:text="获取验证码"
                android:layout_marginLeft="@dimen/dimen_15"
                android:background="@color/white"
                />
        </LinearLayout>

        <View
            android:id="@+id/picture_code_code_line_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_02"
            android:background="@color/c_00baf3"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginRight="@dimen/dimen_40"
            />

        <Button
            android:id="@+id/sms_code_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_47"
            android:text="下一步"
            android:textColor="@color/white"
            android:background="@drawable/corner_radius_33_gray_bg"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginRight="@dimen/dimen_40"
            android:textSize="@dimen/dimen_16"
            />
    </LinearLayout>


</LinearLayout>
