<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_radius_6_white_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_05"
        android:paddingBottom="@dimen/dimen_05"
        android:gravity="center_vertical">
        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="25dip"
            android:layout_height="30dip"
            android:indeterminateDrawable="@anim/loading_rotate"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_dialog_loading"
            android:layout_marginLeft="@dimen/dimen_15"/>
    </LinearLayout>

</LinearLayout>