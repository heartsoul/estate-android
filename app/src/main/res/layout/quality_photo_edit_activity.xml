<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_edit_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_0">

    <com.glodon.bim.business.qualityManage.view.PhotoEditView
        android:id="@+id/photo_edit_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/photo_edit_top_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_11"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="取消"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16"/>

    <TextView
        android:id="@+id/photo_edit_top_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_11"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="完成"
        android:textColor="@color/c_02ff00"
        android:visibility="gone"
        android:textSize="@dimen/dimen_17"/>

    <!--<com.glodon.bim.business.qualityManage.view.DragTextView-->
        <!--android:id="@+id/photo_edit_show_text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/dimen_78"-->
        <!--android:background="@color/transparent"-->
        <!--android:textSize="@dimen/dimen_18"-->
        <!--android:visibility="gone" />-->

    <EditText
        android:id="@+id/photo_edit_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_68"
        android:background="@color/transparent"
        android:layout_marginLeft="@dimen/dimen_11"
        android:textSize="@dimen/dimen_18"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:minHeight="@dimen/dimen_37"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:id="@+id/photo_edit_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/c_ab000000"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/photo_edit_bottom_function"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_42"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_edit_bottom_function_draw_line"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_draw_line_white" />

            <ImageView
                android:id="@+id/photo_edit_bottom_function_draw_text"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_50"
                android:background="@drawable/icon_draw_text" />
        </LinearLayout>

        <View
            android:id="@+id/photo_edit_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_03"
            android:background="@color/c_7b7b7b" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/photo_edit_bottom_cancel_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen_25"
                android:paddingBottom="@dimen/dimen_17">

                <LinearLayout
                    android:id="@+id/photo_edit_bottom_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/icon_bottom_cancel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_05"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14"
                        android:text="    取消    " />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/photo_edit_bottom_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_64"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/icon_bottom_finish" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_05"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14"
                        android:text="使用照片" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/photo_edit_bottom_color_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_30"
                android:paddingTop="@dimen/dimen_30"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_0"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/circle_color_0"
                    />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_1"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_1" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_2"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_2" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_3"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_3" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_4"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_4" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_5"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_5" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_6"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_6" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_7"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/circle_color_7" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_back"
                    android:layout_width="@dimen/dimen_28"
                    android:layout_height="@dimen/dimen_28"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@drawable/icon_color_back"
                     />
            </LinearLayout>

            <View
                android:id="@+id/photo_edit_bottom_color_parent_bottomview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0"
                android:layout_below="@id/photo_edit_bottom_color_parent"
                android:background="@color/c_f33d3d"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/photo_edit_bottom_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/icon_bottom_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="拖动到此处删除"
            android:layout_marginBottom="@dimen/dimen_19"
            android:layout_marginTop="@dimen/dimen_07"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"
            />
    </LinearLayout>
</RelativeLayout>
