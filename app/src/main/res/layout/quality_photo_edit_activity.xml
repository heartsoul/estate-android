<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_0">

    <com.glodon.bim.business.qualityManage.view.PhotoEditView
        android:id="@+id/photo_edit_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/photo_edit_top_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_44"
        android:text="取消"
        android:visibility="gone" />

    <TextView
        android:id="@+id/photo_edit_top_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_44"
        android:text="完成"
        android:textColor="@color/c_00b4f2"
        android:visibility="gone" />

    <com.glodon.bim.business.qualityManage.view.DragTextView
        android:id="@+id/photo_edit_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_78"
        android:background="@color/transparent"
        android:textSize="@dimen/dimen_18"
        android:visibility="gone" />

    <EditText
        android:id="@+id/photo_edit_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_78"
        android:background="#aaaaaa"
        android:hint="write"
        android:textSize="@dimen/dimen_18"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/photo_edit_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/c_80000000"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/photo_edit_bottom_function"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_44"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_edit_bottom_function_draw_line"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/photo_edit_bottom_function_draw_text"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@drawable/ic_launcher" />
        </LinearLayout>

        <View
            android:id="@+id/photo_edit_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_02"
            android:background="@color/c_5e5e5e" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/photo_edit_bottom_cancel_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_15">

                <LinearLayout
                    android:id="@+id/photo_edit_bottom_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimen_44"
                        android:layout_height="@dimen/dimen_44"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="    取消    " />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/photo_edit_bottom_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimen_44"
                        android:layout_height="@dimen/dimen_44"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="使用照片" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/photo_edit_bottom_color_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_0"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_1"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_05"
                    android:background="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_2"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_05"
                    android:background="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_3"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_05"
                    android:background="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_4"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_05"
                    android:background="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_5"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_05"
                    android:background="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_6"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_05"
                    android:background="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_7"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_05"
                    android:background="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/photo_edit_bottom_color_back"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_05"
                    android:background="@color/black"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/photo_edit_bottom_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dimen_44"
            android:layout_height="@dimen/dimen_44"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="拖动到此处删除"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_20"
            />
    </LinearLayout>
</RelativeLayout>
