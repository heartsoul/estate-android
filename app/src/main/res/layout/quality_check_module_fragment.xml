<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/quality_check_module_list_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/quality_check_module_classifes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:background="@color/white"
            android:scrollbars="none"/>
        <include
            android:id="@+id/quality_check_module_recyclerview"
            layout="@layout/view_pullrefresh_view"
            />

    </LinearLayout>

    <ScrollView
        android:id="@+id/quality_check_module_checkpoint_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/quality_check_module_checkpoint_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
