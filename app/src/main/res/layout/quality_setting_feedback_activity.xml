<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/feedback_header_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/c_00baf3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_43"
        android:background="@color/c_00baf3">

        <RelativeLayout
            android:id="@+id/feedback_header_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dimen_09"
                android:layout_height="@dimen/dimen_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/icon_back_white" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_set_feedback_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_17" />

        <TextView
            android:id="@+id/feedback_header_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:text="@string/str_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_set_feedback_name"
                    android:textSize="@dimen/dimen_16"
                    android:textColor="@color/c_5b5b5b"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_20"
                    />
                <EditText
                    android:id="@+id/feedback_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLength="15"
                    android:textSize="@dimen/dimen_16"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:background="@color/white"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/c_e6e6e6"
                android:layout_marginLeft="@dimen/dimen_20"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen_15"
                android:paddingBottom="@dimen/dimen_15"
                android:paddingLeft="@dimen/dimen_20"
                android:paddingRight="@dimen/dimen_20"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_set_feedback_email"
                    android:textSize="@dimen/dimen_16"
                    android:textColor="@color/c_5b5b5b"
                    />
                <EditText
                    android:id="@+id/feedback_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:background="@color/white"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/c_e6e6e6"
                android:layout_marginLeft="@dimen/dimen_20"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen_15"
                android:paddingBottom="@dimen/dimen_15"
                android:paddingLeft="@dimen/dimen_20"
                android:paddingRight="@dimen/dimen_20"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_set_feedback_title_text"
                    android:textSize="@dimen/dimen_16"
                    android:textColor="@color/c_5b5b5b"
                    />
                <EditText
                    android:id="@+id/feedback_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:background="@color/white"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/feedback_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_f9f9f9"
                android:paddingTop="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_16"
                android:paddingRight="@dimen/dimen_20"
                android:paddingLeft="@dimen/dimen_20"
                android:textColor="@color/c_5b5b5b"
                android:textSize="@dimen/dimen_16"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:hint="@string/str_set_feedback_content_hint"
                android:textColorHint="@color/c_acacac"
                android:minLines="5"
                android:maxLength="255"
                android:gravity="left|top"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
