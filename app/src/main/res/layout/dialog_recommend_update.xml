<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corner_radius_6_white_bg"
    android:orientation="vertical"
    android:paddingTop="20dp">


    <RelativeLayout
        android:id="@+id/update_update_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:visibility="gone"
        android:paddingBottom="@dimen/dimen_10">

        <TextView
            android:id="@+id/update_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/str_dialog_is_update"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/update_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_title_tv"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_02"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14" />

        <View
            android:id="@+id/update_divider_view"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/update_wait_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_content_tv"
            android:layout_marginTop="@dimen/dimen_36"
            android:layout_toLeftOf="@id/update_divider_view"
            android:gravity="center"
            android:text="@string/str_dialog_wait"
            android:textColor="@color/c_5b5b5b"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/update_sure_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_content_tv"
            android:layout_marginTop="@dimen/dimen_36"
            android:layout_toRightOf="@id/update_divider_view"
            android:gravity="center"
            android:text="@string/str_dialog_update"
            android:textColor="@color/c_00baf3"
            android:textSize="@dimen/dimen_18" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/update_latest_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10">

        <TextView
            android:id="@+id/update_latest_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/str_dialog_latest_version"
            android:layout_marginTop="@dimen/dimen_25"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_18" />


        <TextView
            android:id="@+id/update_latest_know_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_latest_title_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_36"
            android:gravity="center"
            android:text="@string/str_dialog_know"
            android:textColor="@color/c_00baf3"
            android:textSize="@dimen/dimen_18" />


    </RelativeLayout>
</LinearLayout>