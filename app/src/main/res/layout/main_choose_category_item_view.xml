<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_05"
    android:paddingLeft="@dimen/dimen_05"
    android:paddingRight="@dimen/dimen_05"
    android:paddingBottom="@dimen/dimen_05"
    >
    <LinearLayout
        android:id="@+id/category_item_view_parent"
        android:layout_width="@dimen/dimen_98"
        android:layout_height="@dimen/dimen_98"
        android:background="@drawable/icon_choose_category_item_background"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/category_item_view_icon"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@drawable/icon_category_item_tj" />

        <TextView
            android:id="@+id/category_item_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_12" />
        </LinearLayout>


</LinearLayout>
