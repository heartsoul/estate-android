<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="@dimen/dimen_270"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/corner_radius_6_white_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/save_delete_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择施工单位"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_18"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_30"
            />

        <TextView
            android:id="@+id/save_delete_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择施工单位"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_06"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/c_e7e7e7"
            android:layout_marginTop="@dimen/dimen_22"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/save_delete_dialog_left"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:text="取消"
                android:textSize="@dimen/dimen_18"
                android:gravity="center"
                android:textColor="@color/c_5b5b5b"
                />
            <View
                android:layout_width="@dimen/dimen_0.5"
                android:layout_height="match_parent"
                android:background="@color/c_e7e7e7"
                />
            <TextView
                android:id="@+id/save_delete_dialog_middle"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="99"
                android:text="不保存"
                android:textSize="@dimen/dimen_18"
                android:gravity="center"
                />
            <View
                android:id="@+id/save_delete_dialog_middle_line"
                android:layout_width="@dimen/dimen_0.5"
                android:layout_height="match_parent"
                android:background="@color/c_e7e7e7"
                />
            <TextView
                android:id="@+id/save_delete_dialog_right"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:text="保存"
                android:textSize="@dimen/dimen_18"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>