<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/reset_password_statusview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/white" />


    <RelativeLayout
        android:id="@+id/reset_password_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_43">

        <ImageView
            android:layout_width="@dimen/dimen_09"
            android:layout_height="@dimen/dimen_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_26"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@drawable/icon_back_black" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_25"
        android:text="重置密码"
        android:textColor="@color/c_222222"
        android:textSize="@dimen/dimen_36" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_40"
        android:paddingRight="@dimen/dimen_40"
        android:paddingTop="@dimen/dimen_80">

        <TextView
            android:id="@+id/reset_password_new_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="@color/c_999992"
            android:textSize="@dimen/dimen_12"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/reset_password_new_text"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="新密码"
                android:ellipsize="end"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/c_999992"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="@dimen/dimen_18"
                android:inputType="textPassword"
                />

            <RelativeLayout
                android:id="@+id/reset_password_new_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_15"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_18"
                    android:background="@drawable/icon_login_password_delete"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/reset_password_new_eye"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_08"
                android:background="@drawable/icon_login_password_hide" />
        </LinearLayout>

        <View
            android:id="@+id/reset_password_new_line_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@color/c_f3f2f2" />

        <View
            android:id="@+id/reset_password_new_line_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_02"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@color/c_00baf3"
            android:visibility="gone" />

        <TextView
            android:id="@+id/reset_password_confirm_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_11"
            android:text="确认密码"
            android:textColor="@color/c_999992"
            android:textSize="@dimen/dimen_12"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/reset_password_confirm_text"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="确认密码"
                android:ellipsize="end"
                android:maxLength="20"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/c_999992"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="@dimen/dimen_18" />

            <RelativeLayout
                android:id="@+id/reset_password_confirm_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_15"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_18"
                    android:background="@drawable/icon_login_password_delete"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/reset_password_confirm_eye"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_08"
                android:background="@drawable/icon_login_password_hide" />
        </LinearLayout>

        <View
            android:id="@+id/reset_password_confirm_line_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@color/c_f3f2f2" />

        <View
            android:id="@+id/reset_password_confirm_line_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_02"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@color/c_00baf3"
            android:visibility="gone" />
        <View
            android:id="@+id/reset_password_confirm_line_red"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_02"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@color/c_ff5151"
            android:visibility="gone" />
        <TextView
            android:id="@+id/reset_password_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="前后两次密码不一致，请重新输入！"
            android:textSize="@dimen/dimen_12"
            android:textColor="@color/c_ff5151"
            android:layout_marginTop="@dimen/dimen_06"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:text="备注：请将新密码设置为6-20位，至少含数字/字母/字符两种组合，不能与旧密码相同"
            android:textColor="@color/c_ababab"
            android:textSize="@dimen/dimen_12" />

        <Button
            android:id="@+id/reset_password_finish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_47"
            android:background="@drawable/corner_radius_33_gray_bg"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16" />
    </LinearLayout>


</LinearLayout>
