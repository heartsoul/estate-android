<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_199"
    android:paddingLeft="@dimen/dimen_14"
    android:paddingRight="@dimen/dimen_14"
    android:background="@color/white"
    android:paddingTop="@dimen/dimen_05"
    >
    <com.glodon.bim.customview.CustomShadow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_185"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_07"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:background="@color/white">

            <ImageView
                android:id="@+id/equipment_list_edit_time_icon"
                android:layout_width="@dimen/dimen_18"
                android:layout_height="@dimen/dimen_18"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/icon_time_black" />

            <TextView
                android:id="@+id/equipment_list_edit_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_14"
                android:text="待提交"
                android:textColor="@color/c_f39b3d"
                android:textSize="@dimen/dimen_14" />

            <TextView
                android:id="@+id/equipment_list_edit_item_sheet_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_06"
                android:layout_toLeftOf="@id/equipment_list_edit_status"
                android:layout_toRightOf="@id/equipment_list_edit_time_icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2017-10-18 21:25:00"
                android:textColor="@color/c_565656"
                android:textSize="@dimen/dimen_14" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/c_e6e6e6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_92"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_14"
            android:paddingRight="@dimen/dimen_17"
            >

            <TextView
                android:id="@+id/equipment_list_edit_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/dimen_09"
                android:text="批号：XY003"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/dimen_14" />

            <TextView
                android:id="@+id/equipment_list_edit_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/dimen_09"
                android:textSize="@dimen/dimen_14"
                android:textColor="@color/c_666666"
                android:text="编码：SFD" />

            <TextView
                android:id="@+id/equipment_list_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/dimen_09"
                android:paddingBottom="@dimen/dimen_09"
                android:textSize="@dimen/dimen_14"
                android:textColor="@color/c_666666"
                android:text="名称：钢材" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/c_e6e6e6"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_43"
            android:background="@color/white">

            <TextView
                android:id="@+id/equipment_list_edit_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_20"
                android:background="@drawable/corner_quality_list_bg_gray"
                android:paddingBottom="@dimen/dimen_04"
                android:paddingLeft="@dimen/dimen_13"
                android:paddingRight="@dimen/dimen_13"
                android:paddingTop="@dimen/dimen_04"
                android:text="提交"
                android:textColor="@color/c_979797"
                android:textSize="@dimen/dimen_14" />

            <TextView
                android:id="@+id/equipment_list_edit_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_11"
                android:layout_toLeftOf="@id/equipment_list_edit_submit"
                android:background="@drawable/corner_quality_list_bg_gray"
                android:paddingBottom="@dimen/dimen_04"
                android:paddingLeft="@dimen/dimen_13"
                android:paddingRight="@dimen/dimen_13"
                android:paddingTop="@dimen/dimen_04"
                android:text="删除"
                android:textColor="@color/c_979797"
                android:textSize="@dimen/dimen_14" />


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>