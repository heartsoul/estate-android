<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_6_toast_bg"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_13">
    <ImageView
        android:id="@+id/toast_show_icon_view_icon"
        android:layout_width="@dimen/dimen_20"
        android:layout_height="@dimen/dimen_20"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_04"
        />
    <TextView
        android:id="@+id/toast_show_icon_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_toast_save_photo_success"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dimen_18"
        android:layout_marginLeft="@dimen/dimen_08"
        />
</LinearLayout>